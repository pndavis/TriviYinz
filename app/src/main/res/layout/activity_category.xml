<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.paul.steelhacks.category">

    <TextView
        android:text="Choose a Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/chooseCat" />

    <Button
        android:text="geography"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseCat"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:id="@+id/geogButton" />

    <Button
        android:text="Sports"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/geogButton"
        android:id="@+id/sportButton" />

    <Button
        android:text="Inventions"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_below="@id/sportButton"
        android:layout_height="wrap_content"
        android:id="@+id/inventButton" />

    <Button
        android:text="misc"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_below="@id/inventButton"
        android:layout_height="wrap_content"
        android:id="@+id/button4" />

</RelativeLayout>
